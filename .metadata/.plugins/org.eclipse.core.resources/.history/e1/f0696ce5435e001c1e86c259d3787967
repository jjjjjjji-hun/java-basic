package interaction;

public class Buyer {
	private int money;
	private int mango;
	
	public Buyer(int money) {
		this.money = money;
		this.mango = 0;
	}
	public void buyMango(Seller seller, int mango) {
		if(seller.getMango() > this.money) {
			System.out.println("돈이 모자랍니다.");
			return;
		}else if(seller.getMango() < this.mango) {
			System.out.println("망고재고가 부족합니다.");
			return;
		}
		this.money -= mango * 4000;
		this.mango += mango;
		seller.sellMango(mango);
		System.out.println(money + "원을 지불했습니다.");
		
	}
	public void showBuyer() {
		System.out.println("--------구매자 정보--------");
		System.out.println("현재 소지 망고 : " + this.mango + ", 소지금 : " + this.money);
		System.out.println("-------------------------");
	}

}