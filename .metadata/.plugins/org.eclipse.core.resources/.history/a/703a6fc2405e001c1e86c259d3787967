package interaction;

public class Buyer {
	private int money;
	private int mango;
	
	public Buyer() {
		this.money = 17000;
		this.mango = 0;
	}
	public void buyMango(Seller seller, int mango) {
		seller.sellMango(this.mango);
		if(seller.getMango() > this.money) {
			System.out.println("돈이 모자랍니다.");
			return;
		}
		this.money -= mango * 4000;
		this.mango += mango;
	}

}