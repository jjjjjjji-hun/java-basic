package game.interaction;

public class Thief {
	private int hp;
	private int mp;
	private int atk;
	private int def;
	private int exp;

	public Thief() {
		this.hp = 15;
		this.mp = 10;
		this.atk = 3;
		this.def = 1;
		this.exp = 0;
	}
	public void huntOrc(Orc orc) {
		orc.doBattle(this.atk);
		if(orc.getHp() > 0) {
			this.hp = this.hp + this.def - orc.getAtk();
		}else {
			System.out.println("오크를 처치하였습니다.");
		}
		System.out.println("교전 결과 도적의 체력 : " + this.hp);
	}
	public void huntTroll(Troll troll) {
		troll.coBattle(this.atk);
		if(troll.getHp() > 0) {
			this.hp = this.hp + this.def - troll.getAtk();
		}else {
		System.out.println("트롤을 처치하였습니다.");
		}
		System.out.println("교전 결과 도적의 체력 : " + this.hp);
	}
}
