package interaction;

public class Seller {
	private int money;//매출액
	private int mango;//재고(개수)
	
	public Seller(int mango) {
		this.money = 0;
		this.mango = mango;
	}

	public void sellMango(int sMango) {
		mango = mango - sMango;
		if(mango <= 0) {
			mango = 0;
			System.out.println("망고가 모자랍니다");
			return;
		}
		money = mango * 1000;
		System.out.println(money + "원을 받았습니다.");
	}
	public void showSeller() {
		System.out.println("남은 망고 개수는 : " + mango);
		System.out.println("현재 소지금 : " + money + "원 입니다.");
	}

	public int getMoney() {
		return money;
	}

	public void setMoney(int money) {
		this.money = money;
	}

	public int getMango() {
		return mango;
	}

	public void setMango(int mango) {
		this.mango = mango;
	}
	
}
